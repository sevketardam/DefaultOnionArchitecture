@using DefaultOnionArchitecture.UI.Model.ViewModels
@{
	Layout = null;
}

@model ErrorViewModel

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Hata Oluştu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .access-denied-area{
            height:100vh;
        }

        .access-denied-area .logo{
            position:absolute;
            left:50%;
            top:2rem;
            transform:translate(-50%, 0);
        }

        .access-denied-area .logo img{
            width:200px;
        }

        .access-denied-area .content{
            display:flex;
            flex-direction:column;
            align-items:center;
            justify-content:center;
            gap:2rem;
            height:100vh;
        }

        .access-denied-area .content img{
            width:8rem;
        }

        .access-denied-area .content h1{
            font-size:3rem;
            margin:0;
        }

        .access-denied-area .content a{
            padding:1rem 2rem;
            border:1px solid #000;
            text-decoration:none;
            color:#000;
        }
    </style>
</head>
<body>
    <div class="access-denied-area">
        <div class="logo">
            <img src="~/image/logo/test-logo.png" alt="The Dermakey"/>
        </div>
        <div class="content">
            <img src="~/image/icon/close_15545979.svg" alt="HATA"/>
            <h1>HATA @Model.Status</h1>
            <span>Lütfen hata kodu ile bizimle iletişime geçin: #@Model.Code</span>
            <a href="/" title="Ana Sayfaya Dön">Ana Sayfaya Dön</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
